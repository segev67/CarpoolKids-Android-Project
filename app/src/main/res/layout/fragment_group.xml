<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dashboard_screen_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/group_hub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_hub_title"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/dashboard_text_primary"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/group_hub_card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/dashboard_card_background">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/group_hub_label_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding"
                android:text="@string/group_hub_details"
                android:textSize="@dimen/text_card_time_size"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/group_hub_card_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin_between"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/dashboard_card_background">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/group_hub_label_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding"
                android:text="@string/group_hub_invite"
                android:textSize="@dimen/text_card_time_size"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/group_hub_card_join_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin_between"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/dashboard_card_background">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/group_hub_label_join_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding"
                android:textSize="@dimen/text_card_time_size"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold"
                tools:text="Join requests (0)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/group_hub_card_blocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin_between"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/dashboard_card_background">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/group_hub_label_blocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding"
                android:text="@string/group_hub_blocked_users"
                android:textSize="@dimen/text_card_time_size"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
