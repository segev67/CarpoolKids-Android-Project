<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    android:padding="@dimen/dashboard_screen_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/group_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_hub_details"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/dashboard_text_primary"
            android:textStyle="bold" />

        <!-- Members summary -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/group_details_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:textSize="@dimen/text_section_label_size"
            android:textColor="@color/dashboard_text_secondary"
            tools:text="2 total · 1 parent · 1 child" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/group_details_members_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_section"
            android:text="@string/group_details_members_summary"
            android:textSize="@dimen/text_section_label_size"
            android:textColor="@color/dashboard_text_primary"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/group_details_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:gravity="center"
            android:text="@string/group_details_members_empty"
            android:textSize="@dimen/text_section_label_size"
            android:textColor="@color/dashboard_text_secondary"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_details_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_sm"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            tools:listitem="@layout/item_group_member"
            tools:visibility="visible" />
    </LinearLayout>
</FrameLayout>
