<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.CarpoolKids.CardView.Dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_practice_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_card_time_size"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Tue" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_practice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_card_day_size"
                android:textColor="@color/dashboard_text_secondary"
                tools:text="11 Feb" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/schedule_practice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textSize="@dimen/text_card_day_size"
            android:textColor="@color/dashboard_text_secondary"
            tools:text="17:00 â€“ 18:30" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/schedule_practice_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textSize="@dimen/text_card_day_size"
            android:textColor="@color/dashboard_text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Main Gym" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_practice_to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_badge_size"
                android:textColor="@color/dashboard_text_secondary"
                android:text="@string/schedule_to" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_practice_to_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textSize="@dimen/text_badge_size"
                android:textColor="@color/dashboard_text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="No driver" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_practice_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:textSize="@dimen/text_badge_size"
                android:textColor="@color/dashboard_text_secondary"
                android:text="@string/schedule_from" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_practice_from_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textSize="@dimen/text_badge_size"
                android:textColor="@color/dashboard_text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="No driver" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
